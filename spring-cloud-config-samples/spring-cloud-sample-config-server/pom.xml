    <modelVersion>4.0.0</modelVersion>

    <groupId>com.crsitik</groupId>
    <artifactId>spring-cloud-sample-config-server</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>spring-cloud-sample-config-server</name>
